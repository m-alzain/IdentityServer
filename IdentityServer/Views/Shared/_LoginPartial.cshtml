@using Microsoft.AspNetCore.Identity
@using IdentityServer.Models
@using Microsoft.AspNetCore.Mvc.Localization
@using IdentityServer.Resources

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@inject IViewLocalizer LocService

@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@LocService[ResourceNames.HELLO] @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@LocService[ResourceNames.LOGOFF]</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a class="btn btn-link navbar-btn navbar-link" asp-area="" asp-controller="Account" asp-action="Register">@LocService[ResourceNames.REGISTER]</a></li>
        <li class="nav-item"><a class="btn btn-link navbar-btn navbar-link" asp-area="" asp-controller="Account" asp-action="Login">@LocService[ResourceNames.LOGIN]</a></li>
    </ul>
}
